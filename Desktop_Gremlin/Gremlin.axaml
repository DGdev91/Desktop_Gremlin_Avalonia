<Window x:Class="Desktop_Gremlin.Gremlin"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_Gremlin"
        mc:Ignorable="d"
        Title="Desktop Gremlin" Height="300" Width="300"
        CanResize="False"
        TransparencyLevelHint="Transparent"
        SystemDecorations="None"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="True">
    <Grid  PointerPressed="SpriteImage_RightClick" PointerMoved="Grid_PointerMoved">
        <Image Name="SpriteImage"
           Width="300" Height="300"
           HorizontalAlignment="Left"

           Source="SpriteSheet/food.png"
           VerticalAlignment="Top"
           
           PointerPressed="Canvas_MouseLeftButtonDown" 
           PointerEntered="SpriteImage_MouseEnter"
           PointerExited="SpriteImage_MouseLeave">
        </Image>
        <Image Name="Effect"
           Width="300" Height="300"
           HorizontalAlignment="Left"
           VerticalAlignment="Top">
        </Image>
        <Border x:Name="LeftHotspot"
            Background="red"
            HorizontalAlignment="Left"
            Width="40"
            PointerPressed="LeftHotspot_Click" Margin="50,25,0,0" Height="140" VerticalAlignment="Top"/>
        <Border x:Name="LeftDownHotspot"
             Background="yellow"
             HorizontalAlignment="Left"
             Width="41"
             PointerPressed="LeftDownHotspot_Click" Margin="49,165,0,0" Height="130" VerticalAlignment="Top"/>
        <Border x:Name="RightHotspot"
            Background="blue"
            HorizontalAlignment="Left"
            Width="39"
            PointerPressed="RightHotspot_Click" Margin="225,25,0,0" Height="145" VerticalAlignment="Top"/>
        <Border x:Name="RightDownHotspot"
            Background="Orange"
            HorizontalAlignment="Left"
            Width="39"
            PointerPressed="RightDownHotspot_Click" Margin="225,170,0,0" Height="125" VerticalAlignment="Top" RenderTransformOrigin="2.436,0.56"/>
        <Border x:Name="TopHotspot"
            Background="Purple"
            HorizontalAlignment="Left"
            Width="90"
            PointerPressed="TopHotspot_Click" Margin="115,30,0,0" Height="50" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
        </Border>
        <Border x:Name="ScrollingBorder" Background="White"
            CornerRadius="10"        
            BorderBrush="LightGreen"
            BorderThickness="1.5"
            Width="0" Height="40"
            Padding="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="130,0,0,35">
            <Canvas ClipToBounds="True">
                <TextBlock x:Name="ScrollingText"
                       Text=""
                       Foreground="RosyBrown"
                       FontWeight="Bold"
                       FontSize="16"
                       FontFamily="Agency FB"
                       Canvas.Left="0"
                       Canvas.Top="5"/>
            </Canvas>
        </Border>


    </Grid>
</Window>



