<Window x:Class="DesktopGremlin.Quirks.Companion.Companion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopGremlin.Quirks.Companion"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize" BorderThickness="0" BorderBrush="Black" ShowInTaskbar="false">
    <Grid>
        <Image Name="SpriteImage"
           Width="300" Height="300"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           MouseLeftButtonDown="Canvas_MouseLeftButtonDown">
        </Image>
    </Grid>
</Window>
